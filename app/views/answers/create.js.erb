$('.notice').html('<%= j render 'shared/notice' %>');
<% if @answer.errors.any? %>
  $('.notice').append("<%= @answer.errors.full_messages.join('<br>') %>");
<% else %>
  $('textarea#answer_body').val('');
  $('.answers').append('<%= j render @answer %>');
  $('#new_answer .nested-fields').remove();
<% end %>