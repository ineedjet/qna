p
  p
    = @question.title
  p
    = @question.body
p
  - @answers.each do |answer|
    p = answer.body
    p
      - if current_user == answer.user
        = link_to 'delete', [ @question, answer ], :method => :delete, :title => "Delete answer #{answer.id}"

p
  = form_for [@question, @answer] do |f|
    = f.label :body
    = f.text_area :body
    = f.submit 'Create answer'