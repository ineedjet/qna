.btn-group.btn-group-xs.pull-right role="group"
  - if current_user && votable.can_vote?(current_user)
    => link_to 'vote +1', vote_positive_question_path(votable), method: :post, remote: true, data: { type: :json }, class: "btn btn-default vote vote_positive"
  - else
    => link_to 'vote +1', vote_positive_question_path(votable), method: :post, remote: true, data: {type: :json}, class: "btn btn-default vote vote_positive", style: "display: none"

  span class="btn btn-default vote_raiting" = "rating: " + votable.vote_rating.to_s

  - if current_user && votable.can_vote?(current_user)
    => link_to 'vote -1', vote_negative_question_path(votable), method: :post, remote: true, data: { type: :json }, class: "btn btn-default vote vote_negative"
  - else
    => link_to 'vote -1', vote_negative_question_path(votable), method: :post, remote: true, data: { type: :json }, class: "btn btn-default vote vote_negative", style: "display: none"

  - if current_user && votable.vote_by(current_user)
    => link_to 'delete vote', vote_del_question_path(votable), method: :post, remote: true, data: { type: :json }, class: "btn btn-danger vote_delete"
  - else
    => link_to 'delete vote', vote_del_question_path(votable), method: :post, remote: true, data: { type: :json }, class: "btn btn-danger vote_delete", style: "display: none"